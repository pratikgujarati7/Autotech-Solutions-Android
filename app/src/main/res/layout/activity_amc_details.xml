<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <include layout="@layout/toolbar_text_center" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="10dp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <RelativeLayout
                            android:id="@+id/lin_expand"
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:background="@color/lighterGrey"
                            android:orientation="horizontal"
                            android:padding="10dp"
                            android:weightSum="1">

                            <com.autotechsolutions.CustomView.CustomTextView
                                android:id="@+id/txt_listtitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Title"
                                android:textColor="@color/black"
                                android:textSize="18dp"
                                android:maxWidth="280dp"
                                app:customFont="@string/text_font_bold" />

                            <com.autotechsolutions.CustomView.CustomTextView
                                android:id="@+id/txt_subtitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Subtitle"
                                android:textColor="@color/black"
                                android:layout_below="@+id/txt_listtitle"
                                android:textSize="15dp"
                                android:layout_marginLeft="5dp"
                                app:customFont="@string/text_font" />
                        </RelativeLayout>

                        <LinearLayout
                            android:id="@+id/sub_item"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="10dp"
                            >
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:background="@color/gray">

                                <LinearLayout
                                    android:id="@+id/ll_labour"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:background="@color/white"
                                    android:layout_marginRight="1dp"
                                    android:orientation="vertical">

                                    <com.autotechsolutions.CustomView.CustomTextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:padding="5dp"
                                        android:text="Labour : "
                                        android:textColor="@color/gray"
                                        android:textSize="16sp"
                                        app:customFont="@string/text_font_bold"/>

                                    <com.autotechsolutions.CustomView.CustomTextView
                                        android:id="@+id/txt_labour"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:padding="5dp"
                                        android:text="1. Paid Service 2. Wheel Alignment "
                                        android:textColor="@color/colorPrimary"
                                        app:customFont="@string/text_font"
                                        android:textSize="16sp" />

                                </LinearLayout>
                                <LinearLayout
                                    android:id="@+id/ll_parts"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:layout_marginLeft="1dp"
                                    android:background="@color/white"
                                    android:orientation="vertical">

                                    <com.autotechsolutions.CustomView.CustomTextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:padding="5dp"
                                        android:text="Parts : "
                                        android:textColor="@color/gray"
                                        app:customFont="@string/text_font_bold"
                                        android:textSize="16sp" />

                                    <com.autotechsolutions.CustomView.CustomTextView
                                        android:id="@+id/txt_parts"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:padding="5dp"
                                        android:text="1. Oil (Synthetic) 2. Oil Filter "
                                        android:textColor="@color/colorPrimary"
                                        app:customFont="@string/text_font"
                                        android:textSize="16sp" />

                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>


                </android.support.v7.widget.CardView>


            </LinearLayout>
            <com.autotechsolutions.CustomView.CustomTextView
                android:id="@+id/txt_terms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Terms And Condition"
                android:textColor="@color/colorPrimary"
                app:customFont="@string/text_font_bold"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:textSize="16sp" />
            <com.autotechsolutions.CustomView.CustomTextView
                android:id="@+id/txt_termsandcondition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Subtitle"
                android:textColor="@color/black"
                android:layout_below="@+id/txt_listtitle"
                android:textSize="15dp"
                android:layout_marginLeft="10dp"
                android:padding="5dp"
                app:customFont="@string/text_font" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="9"
            android:background="@color/colorPrimary">

                <com.autotechsolutions.CustomView.CustomButton
                    android:id="@+id/btn_grab"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_marginRight="10dp"
                    android:paddingLeft="5dp"
                    android:background="@android:color/transparent"
                    android:paddingRight="5dp"
                    android:textSize="18dp"
                    android:visibility="visible"
                    android:text=""
                    app:customFont="@string/text_font_bold"
                    android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>



</LinearLayout>