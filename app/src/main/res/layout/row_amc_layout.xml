<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="10dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/lin_expand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/lighterGrey"
                android:orientation="horizontal"
                android:padding="10dp"
                android:weightSum="1">

                    <com.autotechsolutions.CustomView.CustomTextView
                        android:id="@+id/txt_listtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Titleqwert"
                        android:maxWidth="280dp"
                        android:textColor="@color/black"
                        android:textSize="18dp"
                        app:customFont="@string/text_font_bold" />

                    <com.autotechsolutions.CustomView.CustomTextView
                        android:id="@+id/txt_subtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Subtitle"
                        android:textColor="@color/black"
                        android:layout_below="@+id/txt_listtitle"
                        android:textSize="15dp"
                        android:layout_marginLeft="5dp"
                        app:customFont="@string/text_font" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/sub_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp"
                >
                    <LinearLayout
                        android:id="@+id/linermain"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@color/gray">

                        <LinearLayout
                            android:id="@+id/ll_labour"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@color/white"
                            android:layout_marginRight="1dp"
                            android:orientation="vertical">

                            <com.autotechsolutions.CustomView.CustomTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="5dp"
                                android:text="Labour : "
                                android:textColor="@color/gray"
                                app:customFont="@string/text_font_bold"
                                android:textSize="16sp" />

                            <com.autotechsolutions.CustomView.CustomTextView
                                android:id="@+id/txt_labour"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="5dp"
                                android:text="1. Paid Service 2. Wheel Alignment "
                                android:textColor="@color/colorPrimary"
                                app:customFont="@string/text_font"
                                android:textSize="16sp" />

                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/ll_parts"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_marginLeft="1dp"
                            android:background="@color/white"
                            android:orientation="vertical">

                            <com.autotechsolutions.CustomView.CustomTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="5dp"
                                android:text="Parts : "
                                android:textColor="@color/gray"
                                app:customFont="@string/text_font_bold"
                                android:textSize="16sp" />

                            <com.autotechsolutions.CustomView.CustomTextView
                                android:id="@+id/txt_parts"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="5dp"
                                android:text="1. Oil (Synthetic) 2. Oil Filter "
                                android:textColor="@color/colorPrimary"
                                app:customFont="@string/text_font"
                                android:textSize="16sp" />

                        </LinearLayout>
                    </LinearLayout>

                <!--<RelativeLayout-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_marginTop="10dp">-->

                    <!--<com.autotechsolutions.CustomView.CustomButton-->
                        <!--android:id="@+id/btn_grab"-->
                        <!--android:layout_width="105dp"-->
                        <!--android:layout_height="40dp"-->
                        <!--android:layout_centerHorizontal="true"-->
                        <!--android:layout_marginRight="10dp"-->
                        <!--android:background="@drawable/btn_round_shape"-->
                        <!--android:paddingLeft="5dp"-->
                        <!--android:paddingRight="5dp"-->
                        <!--android:visibility="visible"-->
                        <!--app:customFont="@string/text_font"-->
                        <!--android:text="Buy Now"-->
                        <!--android:textColor="@color/white" />-->
                <!--</RelativeLayout>-->


            </LinearLayout>

        </LinearLayout>


    </android.support.v7.widget.CardView>


</LinearLayout>
