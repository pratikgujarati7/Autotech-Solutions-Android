<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:weightSum="10">

        <include layout="@layout/toolbar_text_center" />
     <View
         android:layout_width="match_parent"
         android:layout_height="0.5dp"
         android:background="@color/gray"/>

        <LinearLayout
            android:id="@+id/lin_viewAddresstitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="30dp">

                <com.autotechsolutions.CustomView.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Address Title"
                    android:textColor="@color/black"
                    app:customFont="@string/text_font" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.autotechsolutions.CustomView.CustomEditText
                    android:id="@+id/edt_Address_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="5dp"
                    android:text=""
                    android:textColor="@color/colorPrimary"
                    app:customFont="@string/text_font" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin_viewAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="30dp">

                <com.autotechsolutions.CustomView.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Address"
                    android:textColor="@color/black"
                    app:customFont="@string/text_font" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.autotechsolutions.CustomView.CustomEditText
                    android:id="@+id/edt_Address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="5dp"
                    android:text=""
                    android:textColor="@color/colorPrimary"
                    app:customFont="@string/text_font" />
            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp">

            <com.autotechsolutions.CustomView.CustomButton
                android:id="@+id/btn_addaddress"
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="30dp"
                android:background="@drawable/btn_round_shape"
                android:text="Add Address"
                android:textColor="@color/white"
                android:textSize="15sp"
                app:customFont="@string/text_font" />

        </RelativeLayout>
</LinearLayout>