<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <com.autotechsolutions.CustomView.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Labour : "
                    android:textSize="16sp"
                    android:textColor="@color/gray"
                    android:padding="5dp"/>

                <com.autotechsolutions.CustomView.CustomTextView
                    android:id="@+id/txt_labour"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1. Paid Service 2. Wheel Alignment "
                    android:textSize="16sp"
                    android:textColor="@color/colorPrimary"
                    android:padding="5dp"/>

            </LinearLayout>
            <View
                android:layout_width="2dp"
                android:layout_height="30dp"
                android:background="@color/gray"
                android:layout_marginTop="10dp"
                />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="8dp"
                android:layout_weight="1">

                <com.autotechsolutions.CustomView.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Parts : "
                    android:textSize="16sp"
                    android:textColor="@color/gray"
                    android:padding="5dp"/>

                <com.autotechsolutions.CustomView.CustomTextView
                    android:id="@+id/txt_parts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1. Oil (Synthetic) 2. Oil Filter "
                    android:textSize="16sp"
                    android:textColor="@color/colorPrimary"
                    android:padding="5dp"/>

            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <com.autotechsolutions.CustomView.CustomButton
            android:id="@+id/btn_grab"
            android:layout_width="105dp"
            android:layout_height="40dp"
            android:background="@drawable/btn_round_shape"
            android:text="Grab"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:textColor="@color/white"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"/>
    </RelativeLayout>


</LinearLayout>
