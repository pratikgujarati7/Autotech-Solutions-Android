<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/img_bg"
    android:gravity="center">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logo_mtsbc"
        android:layout_marginTop="30dp"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_mobile"
        android:layout_marginTop="50dp"
        />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter mobile number to get access"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:layout_marginTop="10dp"
            />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:text="+91"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:gravity="center_vertical"
            />
        <View
            android:layout_width="1dp"
            android:layout_height="45dp"
            android:background="@color/white"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="10dp"/>
        <EditText
            android:id="@+id/edt_mobilenumber"
            android:layout_width="150dp"
            android:layout_height="45dp"
            android:hint="9876541230"
            android:maxLength="10"
            android:textColorHint="@color/hintwhite"
            android:textColor="@color/white"
            android:inputType="phone"
            android:background="@android:color/transparent"
            android:layout_marginLeft="10dp"/>

    </LinearLayout>

    <View
        android:layout_width="150dp"
        android:layout_height="5dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/dotted"
        android:layout_marginTop="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="We will send you a one time SMS to authenticate your account"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:gravity="center_horizontal"
        android:layout_marginTop="10dp"
        />

    <ImageView
        android:id="@+id/img_next"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_next"
        android:layout_marginTop="20dp"/>



</LinearLayout>