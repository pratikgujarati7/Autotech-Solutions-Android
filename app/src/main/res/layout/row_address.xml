<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_margin="5dp"
    android:orientation="vertical"
    android:background="@color/bglighteGrey">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="35dp">
        <com.autotechsolutions.CustomView.CustomTextView
            android:id="@+id/txt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="5dp"
            android:textColor="@color/black"
            android:textSize="18dp"
            app:customFont="@string/text_font_bold" />
        <ImageView
            android:id="@+id/delete_address"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/delete_car"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="3dp">
        <com.autotechsolutions.CustomView.CustomTextView
            android:id="@+id/txt_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="2dp"
            android:textColor="@color/black"
            android:textSize="16dp"
            app:customFont="@string/text_font" />
    </RelativeLayout>
</LinearLayout>
