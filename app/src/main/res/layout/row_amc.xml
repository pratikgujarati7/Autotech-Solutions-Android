<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/lin_expand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/lighterGrey"
                android:orientation="horizontal"
                android:padding="10dp"
                android:weightSum="1">

                <LinearLayout
                    android:id="@+id/ll_amc_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.autotechsolutions.CustomView.CustomTextView
                        android:id="@+id/txt_listtitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:text="Titleqwert"
                        android:textColor="@color/black"
                        android:textSize="15dp"
                        app:customFont="@string/text_font_bold" />

                    <com.autotechsolutions.CustomView.CustomTextView
                        android:id="@+id/txt_price"
                        android:layout_width="match_parent"
                        android:layout_weight="6"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:layout_marginRight="5dp"
                        android:text="â‚¹ 100"
                        android:textColor="@color/colorPrimary"
                        android:textSize="15dp"
                        app:customFont="@string/text_font_bold" />

                </LinearLayout>

                <com.autotechsolutions.CustomView.CustomTextView
                    android:id="@+id/txt_subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll_amc_price"
                    android:layout_marginLeft="5dp"
                    android:text="Subtitle"
                    android:textColor="@color/black"
                    android:textSize="14dp"
                    app:customFont="@string/text_font" />

                <com.autotechsolutions.CustomView.CustomButton
                    android:id="@+id/btn_grab"
                    android:layout_width="@dimen/album_dp_200"
                    android:layout_height="@dimen/album_dp_45"
                    android:layout_below="@+id/txt_subtitle"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/btn_round_shape"
                    android:paddingRight="5dp"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="18dp"
                    android:visibility="gone"
                    app:customFont="@string/text_font_bold" />

            </RelativeLayout>
        </LinearLayout>


    </android.support.v7.widget.CardView>


</LinearLayout>
