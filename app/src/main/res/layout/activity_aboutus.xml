<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_about_us"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/autotechlogo" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:text="AutotechSolution"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:text="Version 1.1"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <!--<ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fillViewport="true">-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="25dp"
                    android:orientation="vertical">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/gray" />

                    <TextView
                        android:id="@+id/contentTv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:paddingTop="10dp"
                        android:paddingRight="5dp"
                        android:paddingBottom="10dp"
                        android:text="We have an experience of 26 years in the field of Car Services &amp; Repairs. Our staff is experienced with all Brands of cars and has been the best at their efforts to give best services &amp; Highest CSI (Customer Satisfaction Index) at all times. Our aim is always to provide Customer satisfaction.
\n\nAll our workshops are Fully Equipped, and up-to-date, with on-site machinery such as -
\n    • Paint Booth
\n    • 4D Wheel Balancer
\n    • 4D Wheel Alignment
\n    • Car Scanner Machines
\n    • Pneumatic Tools.
\n    • Digital AC Gas Charging Machine.
\n\nOur Technicians, Chief Technical Office &amp; Floor Supervisors are Skilled, Professional &amp; Trained with major Companies &amp; Manufacturers, and our NonTechnical staff is also trained to perfection to provide seamless Customer Care.
\n\nConnect with us at
\nEmail: crm@autotechsolutions.in,
\n       ceo@autotechsolutions.in,
\n       vishal@autotechsolutions.in
\nCall OR Whatsapp: 9930099311 / 9930022236
\nWEB: www.autotechsolutions.in
"
                        android:textColor="@color/black" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/gray" />
                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>


</LinearLayout>

